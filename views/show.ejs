<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="card" style="width: 50rem;">
  <img src="<%= showCar.image %>" class="card-img-top" alt="...">
  <div class="card-body">
    <p class="card-text"><%= showCar.name.toUpperCase() %></p>
    <p class="card-text"><%= showCar.comment %></p>
    <a class="btn btn-warning" href="/cars/<%= showCar.id %>/edit">Edit</a>
  </div>
  <form class="form-group" action="/cars/<%= showCar.id %>?_method=DELETE" method="POST">
    <button class="btn btn-danger">Delete</button>
  </form>
</div>

<a href="/cars">Go Back</a>